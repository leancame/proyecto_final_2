from kivy.app import App
from kivy.uix.image import Image
from kivy.uix.boxlayout import BoxLayout

class TestApp(App):
    def build(self):
        layout = BoxLayout()
        img = Image(source='./animacion_frames/frame_0.jpg')  # Cambia por un nombre real
        layout.add_widget(img)
        return layout

TestApp().run()